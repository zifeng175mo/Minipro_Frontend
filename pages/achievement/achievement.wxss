/* pages/achievement/achievement.wxss */

.page {
    background-color: #EDEDED;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.all_items {
    margin-top: 40rpx;
    margin-left: 30rpx;
}

.item_card {
    display: block;
    position: relative;
    width: 100%;
    height: 100rpx;
    background-color: white;
    margin-top: 5rpx;
}

.icon {
    display: inline-block;
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    right: 100rpx;
    bottom: 20rpx;
}

.font {
    display: inline-block;
    margin-top: 20rpx;
    margin-left: 90rpx;
    font-size: 32rpx;
}

.weui-flex {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center
}

.weui-cells {
    margin-top: 0;
    opacity: 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    -webkit-transition: .3s;
    transition: .3s
}

.weui-cells:after, .weui-cells:before {
    display: none
}

.weui-cells_show {
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0)
}

.weui-cell:before {
    right: 15px
}

.gone-name {
    margin-left: 90rpx;
    font-size: 30rpx;
    margin-top: 5rpx;
}

.gone-font {
    display: inline-block;
    margin-top: 40rpx;
    margin-bottom: 25rpx;
    margin-left: 90rpx;
    font-size: 32rpx;
}

.kind-list-item {
    margin: 20rpx 0;
    background-color: #fff;
    border-radius: 4rpx;
    overflow: hidden;
    border-bottom: 1px dashed #888;
}

.kind-list-item:first-child {
    margin-top: 0;
}

.kind-list-text {
    flex: 1;
}

.kind-list-img {
    width: 60rpx;
    height: 60rpx;
}

.kind-list-item-hd {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}

.kind-list-item-hd-show {
    opacity: 0.3;
}

.kind-list-item-bd {
    height: 0;
    overflow: hidden;
}

.kind-list-item-bd-show {
    height: auto;
}
